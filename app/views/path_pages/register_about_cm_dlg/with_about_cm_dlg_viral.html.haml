- content_for :extra_css do
  = stylesheet_link_tag "dashboard/index"
  = stylesheet_link_tag "questions/new_question"
  = stylesheet_link_tag "path_pages/register/reg_no_fb"

- content_for :og_data do
  %meta{ :property => "fb:app_id", :content => "#{Facebook::CONFIG["app_id"]}" }
  %meta{ :property => "og:type", :content => "#{Facebook::CONFIG["namespace"]}:question" }
  %meta{ :property => "og:url", :content => "#{question_url(@question)}" }
  %meta{ :property => "og:title", :content => "Hi, Your friend asked a question using CritiqueMe and wants to hear your response!" }
  %meta{ :property => "og:description", :content => "CritiqueMe is a 100% anonymous Q&A site, where you can leave constructive, honest feedback to questions. Your name will never be associated with your answer." }
  - if @question.photo.url
    %meta{ :property => "og:image", :content => @question.photo.url }
  - else
    %meta{ :property => "og:image", :content => "http://#{SEED_BLOCKS_ENGINE_CONFIG[:host]}/assets/questions/default_share_image.jpg"}

.grad_bg
  .cm_content
    .inner_content#landing_page
      .qcontainer.fuzzy#qform
        .form_hdr To avoid duplicate answers to your friend's question, we need some information.
        .form_sub This information will never be shared with your friend; your answer will be 100% anonymous.
        = semantic_form_for @user, :url => register_path do |f|
          = f.inputs do
            = f.input :first_name, :label => "First Name"
            = f.input :last_name, :label => "Last Name"
            .clearer
            = f.input :email, :label => "Email Address"
            %li= text_field_tag 'pw_clear', "Enter a Password"
            = f.input :password
            .clearer
          = f.actions do
            = f.action :submit, :button_html => { :value => "Sign Up!"}

= render :partial => "partials/pitch_dialog2"

- content_for :extra_javascripts do
  = javascript_include_tag "path_pages/register/reg_no_fb"
  = javascript_include_tag "questions/pitch_dialog"