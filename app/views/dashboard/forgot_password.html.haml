- content_for :extra_css do
  = stylesheet_link_tag "questions/new_question"
  = stylesheet_link_tag "dashboard/forgot_password"
  = stylesheet_link_tag "dashboard/cm_sign_in"

.grad_bg
  .cm_content
    .inner_content
      .qcontainer.fuzzy.all_round.gateway#forgot_pass
        .form_hdr Enter the email address you used to register and we'll send <br />you an email to retrieve your password.
        = semantic_form_for @user, :url => forgot_password_path do |f|
          = f.inputs do
            - if flash[:password_success]
              #success= flash[:password_success]
            = f.input :email, :label => "Email Address"
            - if flash[:email_error]
              .error.inline-errors= flash[:email_error]
            .clearer
          = f.actions do
            = f.action :submit, :label => "Submit"
        .form_sub If you didn't get any mail then please contact #{mail_to SEED_BLOCKS_ENGINE_CONFIG[:default_from_address]} for assistance.


- content_for :extra_javascripts do
  = javascript_include_tag "questions/resize_cm_content"