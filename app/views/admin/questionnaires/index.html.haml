= content_for :side_menu do
  %ol.nav
    %li
      = link_to "Create New &raquo;".html_safe, new_admin_questionnaire_path

%h1
  CritiqueMe Questionnaires

%table.merchants.smoothness.highlighter
  %thead
    %tr
      %th Questionnaire
      %th Num Questions
      %th &nbsp;
      %th &nbsp;
  %tfoot
    %tr
      %td{:colspan => 6}
        = will_paginate
  %tbody
    - if @questionnaires.empty?
      %tr
        %td{:colspan => 4}
          %em No questionnaires found.  #{link_to "Create one now &raquo;".html_safe, new_admin_questionnaire_path}
    - else
      = render @questionnaires
