= semantic_form_for @question, :url => new_question_path, :remote => (@admin_user ? false : true) do |f|
  = f.inputs do
    = f.input :category, :prompt => "Choose a category", :collection => Category.for_select
    = f.input :question_text, :as => :string, :prompt => "Ask your friend a question", :label => "Question"
    = f.input :question_type, :as => :question_type, :label => "Answer Format"
    .clearer

  - cnt = 0
  #multiple_choice_answers.hidden
    #add_answers.quiet Add Answers
    #add_button= link_to image_tag("/assets/questions/plus_button.jpg"), '#'
    = f.inputs :class => "inputs multi_choice", :for => :multiple_choice_options do |g|
      - cnt += 1
      = g.input :answer_text, :as => :string, :label => "Answer ##{cnt}", :wrapper_html => {:class => 'mchoice'}

  = f.buttons do
    = f.commit_button(@question.id ? "Edit Your Question" : "Create Your Question")
    .spinner= image_tag "/assets/admin/layout/form_spinner.gif"
    .clear
