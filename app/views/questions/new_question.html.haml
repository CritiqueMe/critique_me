- content_for :extra_css do
  = stylesheet_link_tag "sb_formtastic"
  = stylesheet_link_tag "questions/screen"

= render :partial => "dashboard/dash_nav"

.prepend-top.prepend-1.span-22.append-1
  %fieldset
    %legend Setup a New Question

    .span-20
      .inner_tabs
        %ul
          %li.selected Create Your Own Question
          %li= link_to "Choose a question!", choose_question_path
          .clear
      = semantic_form_for @question, :url => new_question_path do |f|
        = f.inputs do
          = f.input :category, :prompt => "Choose a category", :collection => Category.for_select
          = f.input :question_text, :as => :string, :prompt => "Ask your friend a question", :label => "Question"
          = f.input :question_type, :as => :question_type, :label => "Answer Format"
          .clearer

        - cnt = 0
        #multiple_choice_answers.hidden
          #add_answers.quiet Add Answers
          #add_button= link_to image_tag("/assets/questions/plus_button.jpg"), '#'
          = f.inputs :class => "inputs multi_choice", :for => :multiple_choice_options do |g|
            - cnt += 1
            = g.input :answer_text, :as => :string, :label => "Answer ##{cnt}", :wrapper_html => {:class => 'mchoice'}

        = f.buttons do
          = f.commit_button "Create Your Question"

- content_for :extra_javascripts do
  = javascript_include_tag 'questions/questions'